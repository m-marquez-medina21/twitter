<%= form_with(model: @tweet, local: true) do |f| %>
  <% if @tweet.errors.any? %>
    <div id = 'error_explanation'>
      <h2>Este tweet no se pudo crear por las siguientes razones</h2>
      <ul>
        <% tweet.errors.full_messages.each do |msg|%>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card text-center mx-auto col-md-6 mb-3">
    <h3 class="card-title py-3">¿Qué está pasando?</h3>
    <div class="form-group">
      <%= f.text_area :content, row: 3, class: 'col-md-7'%>
    </div>
    <div class = 'actions' my-2>
      <%= f.submit class: 'btn btn-primary'%>
    </div>
  </div>
<% end %>
